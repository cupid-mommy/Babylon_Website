    <style>
        /* 定義圖片的樣式 */
           .fullscreen-image {
            position: relative;
            width: 100%;
            height: 100vh;
            background-size: cover;
            background-position: center;
            background-image: url('https://i.imgur.com/B5qAdLk.jpg');
        }
        .image-container img {
            display: none; /* 預設隱藏 */
            width: 100%;   /* 圖片寬度 */
            height: auto;
        }
        .image-container img.active {
            display: block; /* 只顯示被選擇的圖片 */
            width: 20%;
            height: 20%;
        }
        .button-container button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            background-color: rgba(0, 0, 0, 0.6);
            color: white;
            border: none;
            border-radius: 5px;
        }
                .content-section {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 250px;
            gap: 30px;
        }
        .row {
            display: flex;
            width: 100%;
            justify-content: center;
            align-items: center;
        }

        .image-side,.image-side2,.image-side3 {
            flex: 1;
            background-image: url('https://i.imgur.com/B5qAdLk.jpg');
            background-size: contain;
            background-repeat: no-repeat;
            height: 500px;
            margin-right: 20%;
        }
        .text-side,.text-side2,.text-side3 {
            flex: 2;
        }
    </style>
